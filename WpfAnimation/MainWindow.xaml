<Window x:Class="WpfAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnimation"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinHeight="400" MinWidth="400">
    <Grid Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <Button Width="80" Height="45" Content="选择文件夹" Click="ButtonBase_OnClick"/>
                <Button Width="80" Height="45" Content="选择资源" Click="ButtonBase_OnClick2" Margin="10 0 0 0"/>
                <Button Width="80" Height="45" Content="加载压缩包" Click="ButtonBase_OnClick3" Margin="10 0 0 0"/>
                <Button Width="80" Height="45" Content="webp单帧" Click="ButtonBase_OnClick4" Margin="10 0 0 0"/>
            </StackPanel>
            <StackPanel>
                <local:Animation x:Name="TestAnimImage" Width="160" Height="160" Margin="0 50 0 0"/>
                <Grid Width="750" Height="246" Background="Red">
                    <Image x:Name="TestImage" Width="750" Height="246" Margin="0 10 0 0"/>
                </Grid>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
